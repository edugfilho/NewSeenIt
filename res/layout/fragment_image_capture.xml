<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<com.example.mobileseenit.PreviewLayout
	    android:id="@+id/CameraLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_gravity="center" >
  
        <SurfaceView
            android:id="@+id/mySurface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />
            
        <com.example.mobileseenit.Focus
            android:id="@+id/focus"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center" />

    </com.example.mobileseenit.PreviewLayout>
    
	<ImageButton
            android:id="@+id/myBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:alpha="0.7"
            android:background="@drawable/capturebtn"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/flashIndicator"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/flash_off"
            android:contentDescription="@string/image_capture_flash" />
	
    
</FrameLayout>
